{{#if addAnswer}}
<form>
  <div class="form-group">
    <label for="author">Name</label>
    {{input value=author}}
  </div>
  <div class="form-group">
    <label for="content">Answer</label>
    {{input value=content}}
  </div>
  <button {{action 'saveAnswer'}} class="btn">Save</button>
  <button {{action 'cancel'}} class="btn">Cancel</button>
</form>
{{else}}
  <button {{action 'answerForm'}} class="btn">Add answer</button>
{{/if}}
