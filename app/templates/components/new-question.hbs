{{#bs-modal submitTitle="Submit" open=modal3 onSubmit=(action "saveQuestion") onHidden=(action (mut modal3) false) as |modal|}}
  {{#modal.header}}
    <h4 class="modal-title">
      New Question
    </h4>
  {{/modal.header}}
  {{#modal.body}}
    <div class="form-group">
      <label for="author">Name</label>
      {{input value=author id="author" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="query">Question</label>
      {{input value=query id="query" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="note">Notes and Ellaborations</label>
      <br>
      {{textarea value=note cols="80" rows="6"}}
    </div>
    {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close)}}Cancel{{/bs-button}}
    {{#bs-button type="success" onClick=(action modal.submit)}}Save{{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
{{#bs-button onClick=(action (mut modal3) true)}}Ask a question{{/bs-button}}
